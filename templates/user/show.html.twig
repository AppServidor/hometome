{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.Apellidos }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                 <td> <img class="w-25" src=" {{ asset ('downloads/'~user.foto) }} "/></td>
            </tr>
            <tr>
                <td>Preferencias </td>
             {% for pref in preferencias %}
                  <td>{{pref.nombre}}</td>
                {% endfor %}
                </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
