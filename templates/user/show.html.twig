{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% include 'navAdmin.html.twig' %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.Apellidos }}</td>
            </tr>
            <tr>
                <th>Foto </th>
             {% for foto in fotos %}
                  <td><img src="{{asset('users/user'~user.id~'/'~foto.nombre)}}"></td>
                {% endfor %}
                </tr>
            <tr>
                <th>Preferencias </th>
             {% for pref in preferencias %}
                  <td>{{pref.nombre}}</td>
                {% endfor %}
                </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
