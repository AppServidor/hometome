<form method="post" action="{{ path('perfilPic_delete', {'id':foto.id}) }}" onsubmit="return confirm('¿Estás seguro de querer eliminar la foto?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ foto.id) }}">
    <input type="hidden" name="idUsuario" value="{{  user.id}}">
    <button class="btn"><img style="height: 20px" src="{{asset('img/app/close.png')}}"></button>
</form>
