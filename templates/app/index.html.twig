        <option value="2" selected>2 personas</option>
        <option value="3+">3 o más personas</option>
    </select>
    </br>
    <input type="text" size="4" placeholder="min" id="min"></input>
    <input type="text" size="4" placeholder="max"></input>
    </br>
  <div class="ui-widget">
