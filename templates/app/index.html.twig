{% extends 'base.html.twig' %}

{% block title %}Home de usuario{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="col-5" id="perfil">
    <h2>Bienvenid@!</h2>

    Aquí estarán las principales funciones de los usuarios de la app.
    </br>
    <a href="home/perfil"> Editar tu perfil</a>
    <a href="/"> Volver</a>
    <a href="/logout"> Logout</a>
</div>

<div class="col-7" id="resultados">
    <h2>Resultados</h2>
    Aquí saldrán los resultados.
</div>

<div class="col-5" id="buscador">
    <h2>Buscador</h2>
    Aquí estarán los filtros.
    <label for="cuadro_busqueda">Buscar</label>
    <input type="text" id="cuadro_busqueda">
            <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.Apellidos }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Mostrar</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}
